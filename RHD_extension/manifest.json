{
  "manifest_version": 3,
  "name": "Kinyarwanda Hate Speech Checker (Dev)",
  "version": "1.0.0",
  "description": "Development version - Highlight text, click the icon to analyze it for hate speech.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "https://kinyarwanda-hatespeech-detection.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}